<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkgrnd_with_border"
    android:orientation="vertical"
    tools:context="com.group13.androidsdk.mycards.ReviewBackActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/small_logo"/>
    <TextView
        android:id="@+id/tvBackText"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginBottom="64dp"
        android:background="#FFFFFF"
        android:hint="Edit"
        android:padding="36dp"
        android:textColor="#29c99d"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Rate difficulty: "
        android:textColor="#ffffff"
        />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rbDiff1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 1 "
            android:textColor="#ffffff"/>
        <RadioButton
            android:id="@+id/rbDiff2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 2 "
            android:textColor="#ffffff"/>
        <RadioButton
            android:id="@+id/rbDiff3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 3 "
            android:textColor="#ffffff"/>
        <RadioButton
            android:id="@+id/rbDiff4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 4 "
            android:textColor="#ffffff"/>
        <RadioButton
            android:id="@+id/rbDiff5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 5 "
            android:textColor="#ffffff"/>

    </RadioGroup>
    <Button
        android:id="@+id/btnNext"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:text="Next"
        android:textColor="#29c99d"
        android:textSize="10sp"/>

</LinearLayout>
